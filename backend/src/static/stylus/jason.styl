  ('red' #f44336 #fff),
  ('red-accent-1' #ff8a80 #fff), ('red-accent-2' #ff5252 #fff),
  ('red-accent-3' #ff1744 #fff), ('red-accent-4' #d50000 #fff),
  ('pink' #e91e63 #fff),
  ('pink-accent-1' #ff80ab #fff), ('pink-accent-2' #ff4081 #fff),
  ('pink-accent-3' #f50057 #fff), ('pink-accent-4' #c51162 #fff),
