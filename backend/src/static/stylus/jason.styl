  ('purple-accent-3' #d500f9 #fff), ('purple-accent-4' #aa00ff #fff),
  ('indigo' #3f51b5 #fff),
  ('indigo-accent-1' #8c9eff #fff), ('indigo-accent-2' #536dfe #fff),
  ('indigo-accent-3' #3d5afe #fff), ('indigo-accent-4' #304ffe #fff),
  ('blue' #2196f3 #fff),
  ('blue-accent-1' #82b1ff #fff), ('blue-accent-2' #448aff #fff),
  ('blue-accent-3' #2979ff #fff), ('blue-accent-4' #2962ff #fff),
  ('cyan' #00bcd4 #fff),
