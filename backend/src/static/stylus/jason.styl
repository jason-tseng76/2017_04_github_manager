html, body
  margin: 0
  padding: 0
  font-family: $font-stack

.login_content h1
  font-family: $font-stack

for $value in $colors
  .color-{$value[0]}
    background-color: $value[1]
    color: $value[2]

.fade-enter-active, .fade-leave-active
  transition opacity .3s
.fade-enter, .fade-leave-active
  opacity 0

.flex-cc
  display flex
  justify-content center
  align-items center

.panel_toolbox
  min-width 0

.swal2-modal
  font-family $font-stack

.inloading
  display flex
  justify-content center
  align-items center
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  background-color rgba(255, 255, 255, .5)
  z-index: 5